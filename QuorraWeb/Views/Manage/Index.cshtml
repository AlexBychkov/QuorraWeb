@model IndexViewModel
@{
    ViewData["Title"] = "Account";
    ViewData.AddActivePage(ManageNavPages.Index);
}

<div class="row">
    <div class="col-12">
        @Html.Partial("_StatusMessage", Model.StatusMessage)
    </div>
</div>

<div class="card">
    <div class="card-body">
        <h4 class="card-title">@ViewData["Title"]</h4>
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            
            <div class="row">
                <div class="col-12">
                    <div class="form-group">
                        <label asp-for="Username"></label>
                        <input asp-for="Username" class="form-control" disabled>
                        <i class="form-group__bar"></i>
                    </div>
                </div>
            </div> 

            @if (Model.IsEmailConfirmed)
            {
                <div class="row">
                    <div class="col-12">
                        <label asp-for="Email"></label>
                        <div class="input-group">

                            <input asp-for="Email" class="form-control">
                            <div class="input-group-prepend">
                                <span class="input-group-text text-success">
                                    <i class="zmdi zmdi-check zmdi-hc-fw"></i> Confirmed
                                </span>
                            </div>
                            <i class="form-group__bar"></i>
                        </div>
                    </div>
                </div> 
            }
            else
            {
                <div class="row">
                    <div class="col-12">
                        <label asp-for="Email"></label>
                        <div class="input-group">
                            <input asp-for="Email" class="form-control">
                            <div class="input-group-prepend">
                                <span class="input-group-text">
                                    <button asp-action="SendVerificationEmail" class="btn btn-link" style="padding: 0">Send verification email</button>
                                </span>
                            </div>
                            <i class="form-group__bar"></i>
                        </div>
                    </div>
                </div>
            }
            
            <div class="row text-right">
                <div class="col-12">
                    <div class="form-group mt-5 mb-0 text-right">
                        <button type="submit" class="btn btn-primary btn--icon-text"><i class="zmdi zmdi-save"></i> Save</button>
                    </div>
                </div>
            </div> 
        </form>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
