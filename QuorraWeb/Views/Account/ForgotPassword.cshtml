@using System.Collections.Generic
@using System.Linq
@using Microsoft.AspNetCore.Http
@using Microsoft.AspNetCore.Http.Authentication

@model LoginViewModel
@inject SignInManager<ApplicationUser> SignInManager

@{
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
    ViewData["Title"] = "Restore Password";
}

<!-- Restore Password -->
<div class="login__block active" id="l-forget-password">
    <div class="login__block__header">
        <i class="zmdi zmdi-account-circle"></i>
        Forgot Password?

        <div class="actions actions--inverse login__block__actions">
            <div class="dropdown">
                <i data-toggle="dropdown" class="zmdi zmdi-more-vert actions__item"></i>

                <div class="dropdown-menu dropdown-menu-right">
                    <a asp-action="Login" asp-route-returnurl="@ViewData["ReturnUrl"]" class="dropdown-item" data-ma-target="#l-forget-password">Sign in</a>
                    <a asp-action="Register" asp-route-returnurl="@ViewData["ReturnUrl"]" class="dropdown-item" data-ma-target="#l-register">Sign up</a>
                </div>
            </div>
        </div>
    </div>

    <div class="login__block__body">
        <p class="mt-4">Lorem ipsum dolor fringilla enim feugiat commodo sed ac lacus.</p>

        <form asp-action="ForgotPassword" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group form-group--float form-group--centered">
                <input asp-for="Email" class="form-control">
                <label asp-for="Email"></label>
                <i class="form-group__bar"></i>
            </div>

            <button type="submit" class="btn btn--icon login__block__btn"><i class="zmdi zmdi-long-arrow-right"></i></button>
        </form>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}